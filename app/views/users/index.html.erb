<h1>Listing users</h1>

<table>
  <tr>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.email unless user.admin %></td>
    <td><%= link_to 'Show', user unless user.admin %></td>
    <% if !current_user.nil? %>
      <% if current_user.admin %>
        <td><%= link_to 'Destroy', users_path(:remove => user.id) %></td>
      <% end %>
    <% end %>
  </tr>
<% end %>
</table>

